// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Menu {
  id          String @id @default(uuid())
  title       String
  description String
  price       Int
  quantity    Int
  category    String

  @@map("menu")
}
